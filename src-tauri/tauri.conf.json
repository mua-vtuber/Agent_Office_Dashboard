{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "agent-mascot",
  "version": "0.1.0",
  "identifier": "com.hayoung.agent-mascot",
  "build": {
    "beforeDevCommand": "pnpm --filter @agent-mascot/webview dev",
    "beforeBuildCommand": "pnpm --filter @agent-mascot/webview build",
    "frontendDist": "../apps/webview/dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Agent Mascot",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "fullscreen": true,
        "focus": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri://localhost; connect-src 'self' tauri://localhost; img-src 'self' data: blob:; script-src 'self'; style-src 'self' 'unsafe-inline'; worker-src blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
